<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext (HTTP) traffic for localhost during development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android emulator host alias -->
    </domain-config>
    
    <!-- For production, require HTTPS for all other domains -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">destinydecoder.app</domain>
    </domain-config>
</network-security-config>
